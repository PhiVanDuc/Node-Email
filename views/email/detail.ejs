<div class="d-flex flex-column align-items-center">
    <div style="width: 1200px;">
        <% if (email) { %>
            <h2 class="mb-5">Email Detail: <%= email.id %></h2>
            <p class="py-3 px-5 rounded-pill" style="-webkit-box-shadow: 0px 0px 20px 4px rgba(0,0,0,0.05);
            -moz-box-shadow: 0px 0px 20px 4px rgba(0,0,0,0.05);
            box-shadow: 0px 0px 20px 4px rgba(0,0,0,0.05);">
                <span class="d-block fw-semibold fs-6 mb-1">To:</span>
                <span><%= email.to %></span>
            </p>

            <p class="py-3 px-5 rounded-pill" style="-webkit-box-shadow: 0px 0px 20px 4px rgba(0,0,0,0.05);
            -moz-box-shadow: 0px 0px 20px 4px rgba(0,0,0,0.05);
            box-shadow: 0px 0px 20px 4px rgba(0,0,0,0.05);">
                <span class="d-block fw-semibold fs-6 mb-1">Title:</span>
                <span><%= email.title %></span>
            </p>

            <p class="py-3 px-5 rounded-pill" style="-webkit-box-shadow: 0px 0px 20px 4px rgba(0,0,0,0.05);
            -moz-box-shadow: 0px 0px 20px 4px rgba(0,0,0,0.05);
            box-shadow: 0px 0px 20px 4px rgba(0,0,0,0.05);">
                <span class="d-block fw-semibold fs-6 mb-1">Status:</span>
                <span><%= email.status ? 'Đã đọc' : 'Chưa đọc' %></span>
            </p>

            <p class="py-3 px-5 rounded-pill" style="-webkit-box-shadow: 0px 0px 20px 4px rgba(0,0,0,0.05);
            -moz-box-shadow: 0px 0px 20px 4px rgba(0,0,0,0.05);
            box-shadow: 0px 0px 20px 4px rgba(0,0,0,0.05);">
                <span class="d-block fw-semibold fs-6 mb-1">Content:</span>
                <span><%- email.content %></span>
            </p>

            <p class="py-3 px-5 rounded-pill" style="-webkit-box-shadow: 0px 0px 20px 4px rgba(0,0,0,0.05);
            -moz-box-shadow: 0px 0px 20px 4px rgba(0,0,0,0.05);
            box-shadow: 0px 0px 20px 4px rgba(0,0,0,0.05);">
                <span class="d-block fw-semibold fs-6 mb-1">Send At:</span>
                <span><%= email.created_at %></span>
            </p>
        <% } else { %>
            <h2>Not Found Email</h2>
        <% } %>
    </div>
</div>