<div class="d-flex flex-column align-items-center">
    <div style="width: 800px;">
        <% if (message) { %>
            <div class="alert alert-success mb-3 w-100" role="alert">
                <%= message %>
            </div>
        <% } %>

        <div class="d-flex align-items-center justify-content-between w-100">
            <h2 class="mb-5 text-start">Form send email</h2>
            <a href="/email_history" class="btn btn-warning">History</a>
        </div>

        <form action="/email_form" method="post" class="w-100">
            <div class="form-group mb-3">
                <label class="mb-2" for="">Email to:</label>
                <input type="text" class="form-control" placeholder="Email to..." name="to">
                <% if (req.errors.to) { %>
                    <p class="text-danger mt-2">
                        <%= req.errors.to %>
                    </p>
                <% } %>
            </div>

            <div class="form-group mb-3">
                <label class="mb-2" for="">Title</label>
                <input type="text" class="form-control" placeholder="Title..." name="title">
                <% if (req.errors.title) { %>
                    <p class="text-danger mt-2">
                        <%= req.errors.title %>
                    </p>
                <% } %>
            </div>

            <div class="form-group mb-3">
                <label class="mb-2" for="">Content</label>
                <textarea class="form-control resize-none" id="" rows="5" placeholder="Content..." name="content" style="resize: none; overflow-y: hidden;"></textarea>
                <% if (req.errors.content) { %>
                    <p class="text-danger mt-2">
                        <%= req.errors.content %>
                    </p>
                <% } %>
            </div>

            <button type="submit" class="btn btn-primary">Send</button>
        </form>
    </div>
</div>